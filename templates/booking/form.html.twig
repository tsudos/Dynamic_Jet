{% extends "common/layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{ booking.id ? 'Réservation de ' ~ booking.customer.firstname ~ ' ' ~ booking.customer.lastname : 'Créer un booking' }}
{% endblock %}

{% block content %}
  
  <h2>{{ booking.id ? 'Réservation de ' ~ booking.customer.firstname ~ ' ' ~ booking.customer.lastname : 'Créer un booking' }}</h2>
  <div class="card card-table">
      <div class="card-body">
        {{form_start(form)}}
          <div class="row">
              <div class="col-md-6">
                  {{ form_row(form.startDate) }}
              </div>
              <div class="col-md-6">
                {{ form_row(form.timeRange) }}
              </div>
              <div class="col-md-6">
                  {{ form_row(form.equipments) }}
              </div>
              <div class="col-md-6">
                  {{ form_row(form.staffs) }}
              </div>
              <div class="col-md-6">
                  {{ form_row(form.customer) }}
              </div>
              <div class="col-md-6 mt-5">
                <p>Prix : </p>
              </div>
          </div>
          {% if  booking.id %}
            <p>{{ 'Date de réservation : ' ~ booking.bookingDate|date('d/m/Y') }}</p>
          {% endif %}
          <div class="mt-5 float-right">
              <a href="{{ path('booking.list') }}" class="btn btn-outline-secondary"><i class="fas fa-reply-all"></i> Retour à la liste</a>
              <button type="submit" class="btn btn-success" id="bookingSubmit"><i class="far fa-save"></i> Sauvegarder</button>
            </div> 
          {{form_end(form)}}
        </div>
      </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }} <script src="/assets/js/booking.js"></script>
{% endblock %}